
@section Scripts {
    @Scripts.Render("~/bundles/StudyGroup")
}

<div class="row">

    <div class="col-sm-12">
        <div class="col" style="float:right; margin:10px">
            <button type="button" class="btn btn-style btn-lg" data-toggle="modal" data-target="#studyGroupModel">Add Study Group</button>
            <!-- Modal -->
            <div class="modal fade" id="studyGroupModel" role="dialog">
                <div class="modal-dialog">

                    <!-- Modal content-->
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h4 class="modal-title">Create Study Group</h4>
                        </div>
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label data-bind="value: result" />
                            </div>
                            <div class="form-group error-messages" data-bind="foreach: errors">
                                <p data-bind="text: $data" />
                            </div>
                        </div>

                        <form data-bind="submit:AddStudyGroup">
                            <div class="modal-body" style="float:left; clear:both;">

                                <div class="form-row">
                                    <div class="col" style="float:left; margin:10px">
                                        <input type="text" data-bind="value: groupName" class="form-control" placeholder="Group Name">
                                    </div>
                                </div>
                            </div>
                            <div class="modal-footer" style="clear:both">
                                <button type="submit" class="btn btn-default">Add</button>
                                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                            </div>
                        </form>
                    </div>

                </div>
            </div>

        </div>
    </div>

    <div class="col-sm-12" style="float:left">
        <h3 style="margin-bottom:10px;margin:10px">Study Groups Added</h3>
        <div class="col-sm-12" style="float:left;margin:10px">

            <table class="table table-hover table-bordered table-striped" id="studyGroupTable">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Study Group</th>
                        <th>Created On</th>
                        <!--<th>Study Group</th>-->
                    </tr>
                </thead>

            </table>
        </div>

    </div>
</div>



@section Scripts {
    @Scripts.Render("~/bundles/Surveys")
}

@{
    ViewBag.Title = "Manage Surveys";
}

<div class="row">
    <div class="col-sm-12">
        <div class="col" style="float:right; margin:10px">
            <button type="button" class="btn btn-style btn-lg" data-toggle="modal" data-target="#addSurveyModel">Create New Survey</button>

            <div class="modal fade" id="addSurveyModel" role="dialog">
                <div class="modal-dialog">

                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h4 class="modal-title">Create Survey</h4>
                        </div>
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label data-bind="value: result" />
                            </div>
                            <div class="form-group error-messages" data-bind="foreach: errors">
                                <p data-bind="text: $data" />
                            </div>
                        </div>

                        <form data-bind="submit:AddSurvey">
                            <div class="modal-body" style="float:left; clear:both;">

                                <div class="form-row">
                                    <div class="col" style="float:left; margin:10px">
                                        <input type="text" data-bind="value: surveyName" class="form-control" placeholder="Survey Name">
                                    </div>
                                </div>
                                <div class="form-row">
                                    <table class="table table-hover table-bordered table-striped" id="questionsTable">
                                        <thead>
                                            <tr>
                                                <th><input name="select_all" value="1" id="question-select-all" type="checkbox" /></th>
                                                <th>Id</th>
                                                <th>Text</th>
                                                <th>Type</th>
                                                <th>Options</th>
                                                <th>Range</th>
                                            </tr>
                                        </thead>
                                    </table>
                                </div>
                            </div>
                            <div class="modal-footer" style="clear:both">
                                <hr />
                                <button type="submit" class="btn btn-default">Add</button>
                                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                            </div>
                        </form>
                    </div>

                </div>
            </div>
        </div>
    </div>


    <div class="col-sm-12" style="float:left">
        <h3 style="margin-bottom:20px;margin-top:10px;float:left">Surveys already created</h3>
        <table class="table table-hover table-bordered table-striped" id="surveysTable">
            <thead>
                <tr>
                    <th>Survey Id</th>
                    <th>Survey Name</th>
                </tr>
            </thead>
        </table>
    </div>

</div>


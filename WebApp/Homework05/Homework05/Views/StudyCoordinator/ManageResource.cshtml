
@section Scripts {
    @Scripts.Render("~/bundles/Questions")
}

<div class="row">
    <div class="col-sm-12">
        <div class="col" style="float:right; margin:10px">
            <button type="button" class="btn btn-style btn-lg" data-toggle="modal" data-target="#addQuestionModel">Add Item</button>

            <div class="modal fade" id="addQuestionModel" role="dialog">
                <div class="modal-dialog">

                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h4 class="modal-title">Add Item</h4>
                        </div>
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label data-bind="value: result" />
                            </div>
                            <div class="form-group error-messages" data-bind="foreach: errors">
                                <p data-bind="text: $data" />
                            </div>
                        </div>

                        <form data-bind="submit:AddQuestion">
                            <div class="modal-body" style="float:left; clear:both;">

                                <div class="form-row">
                                    <div class="col" style="float:left; margin:10px">
                                        <input type="text" data-bind="value: questionText" class="form-control" placeholder="Question Text">
                                    </div>

                                    <div class="col" style="float:left; margin:10px;">
                                        <select id="questionType" class="form-control"  data-bind="value: questionType">
                                            <option selected disabled>Question type</option>
                                            <option value="0">TextEntry</option>
                                            <option value="1">Choice</option>
                                            <option value="2">Scale</option>
                                            <option value="3">Info</option>
                                        </select>
                                    </div>
                                </div>
                                <div id="options" class="form-row" style="visibility:hidden">
                                    <div class="col" style="float:left; margin:10px;">
                                            <input type="text" data-bind="value: options" class="form-control" placeholder="Comma seperated options">
                                    </div>
                                </div>
                                <div id="likeScaleProperties" class="form-row" style="clear:both; visibility:hidden">
                                    <div class="col" style="float:left; margin:10px">
                                        <input class="form-control" type="text" data-bind="value: minBound" placeholder="Minimum bound">
                                    </div>
                                    <div class="col" style="float:left; margin:10px">
                                        <input class="form-control" type="text" data-bind="value: maxBound" placeholder="Maximum bound">
                                    </div>
                                    <div class="col" style="float:left; margin:10px">
                                        <input class="form-control" type="text" data-bind="value: interval" placeholder="step size">
                                    </div>
                               </div>
                            </div>
                            <div class="modal-footer">
                                <button type="submit" class="btn btn-default">Add</button>
                                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                            </div>
                        </form>
                    </div>

                </div>
            </div>
        </div>
    </div>


    <div class="col-sm-12" style="float:left">
        <h3 style="margin-bottom:20px;margin-top:10px;float:left">Resources already created</h3>
        <table class="table table-hover table-bordered table-striped" id="questionsTable">
            <thead>
                <tr>
                    <th>Questions Text</th>
                    <th>Type</th>
                </tr>
            </thead>
        </table>
    </div>

</div>
 

